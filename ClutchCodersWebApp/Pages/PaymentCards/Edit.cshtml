@page
@model ClutchCodersWebApp.Pages.PaymentCards.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PaymentCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentCard.CardId" />
            <div class="form-group">
                <label asp-for="PaymentCard.CardNumber" class="control-label"></label>
                <input asp-for="PaymentCard.CardNumber" class="form-control" />
                <span asp-validation-for="PaymentCard.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentCard.NameOnCard" class="control-label"></label>
                <input asp-for="PaymentCard.NameOnCard" class="form-control" />
                <span asp-validation-for="PaymentCard.NameOnCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentCard.ExpiryYear" class="control-label"></label>
                <input asp-for="PaymentCard.ExpiryYear" class="form-control" />
                <span asp-validation-for="PaymentCard.ExpiryYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentCard.ExpiryMonth" class="control-label"></label>
                <input asp-for="PaymentCard.ExpiryMonth" class="form-control" />
                <span asp-validation-for="PaymentCard.ExpiryMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentCard.SecurityCode" class="control-label"></label>
                <input asp-for="PaymentCard.SecurityCode" class="form-control" />
                <span asp-validation-for="PaymentCard.SecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
